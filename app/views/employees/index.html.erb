<% @employees.each_with_index do |employee,index| %>
	<table align="" border="1" id="emp_entries">
    <tr>
    	<td>Id</td>
    	<td><%= index+1 %></td>
    </tr>
    <tr>
      <td>First Name</td>
      <td><%= employee.emp_firstname %></td>
    </tr>

    <tr>
      <td>Last Name</td>
      <td><%= employee.emp_lastname %></td>
    </tr>

    <tr>
      <td>Email</td>
      <td><%= employee.email %></td>
    </tr>
  </table>
<% end %>
<%= link_to 'New employee', new_employee_path  %>